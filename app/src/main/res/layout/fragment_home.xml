<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shimmer_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"

                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"

                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"

                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />
                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shimmer_placeholder" />

            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ScrollView
        android:id="@+id/homeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llChikki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:weightSum="2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chikki_logo"
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Lonavala Chikki"
                        android:textColor="@color/pinkesh_red"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_margin="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_margin="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llChikki"
                    >

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_period="1000"
                        app:iss_text_align="CENTER"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/pinkesh_red"
                    android:background="@drawable/categories_title_bg"
                    android:textColor="@color/white"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="FEATURES BY CATEGORIES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryRV"
                    android:layout_width="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/dry_fruits_text"
                    android:textColor="@color/white"
                    android:background="@drawable/categories_title_bg"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="DRY FRUITS ROLLS"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categoryRV" />

                <TextView
                    android:id="@+id/sADryFurits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/dry_fruits_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView3"
                    app:layout_constraintBottom_toBottomOf="@id/textView3"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dryFruitsRollsRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/namkeens_text"
                    android:textColor="@color/white"
                    android:background="@drawable/categories_title_bg"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="OUR SPECIAL NAMKEENS"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dryFruitsRollsRV" />

                <TextView
                    android:id="@+id/sANamkeens"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/dry_fruits_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView36"
                    app:layout_constraintBottom_toBottomOf="@id/textView36"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/specialNamkeensRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView36" />

                <TextView
                    android:id="@+id/textView363"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="14dp"
                    android:text="CHIKKI"
                    android:backgroundTint="@color/chikki_text"
                    android:background="@drawable/categories_title_bg"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/specialNamkeensRV" />

                <TextView
                    android:id="@+id/sAChikki"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/chikki_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView363"
                    app:layout_constraintBottom_toBottomOf="@id/textView363"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chkkiRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView363" />

                <TextView
                    android:id="@+id/textView3636"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="FUDGE"
                    android:backgroundTint="@color/fudge_text"
                    android:background="@drawable/categories_title_bg"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chkkiRV" />

                <TextView
                    android:id="@+id/sAFudge"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/fudge_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView3636"
                    app:layout_constraintBottom_toBottomOf="@id/textView3636"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fudgeRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3636" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>